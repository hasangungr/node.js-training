extends ../layouts/main-layouts.pug 


block styles
    link(rel="stylesheet" href="../public/css/form.css")

block content 
        div.col-lg-9
            h1 Add Category
            hr
            form(method="POST" action="/admin/categories")


                input#id(type="hidden" name="id" value=`${category._id}`)

                div.form-group.row
                    label(for="name").col-sm-2.col-form-label Name
                    div.col-sm-10 
                        input.form-control#name(type="text" name="name", value =`${category.name}`)

                div.form-group.row
                    label(for="description").col-sm-2.col-form-label Description
                    div.col-sm-10 
                        input.form-control#description(type="text" name="description" value =`${category.description}`)
                    
                               
             

                .form-group.row
                    .col-sm-10.offset-sm-2
                        input(type="Submit" value="Save Category").btn.btn-primary  
 
  
